<Window x:Class="NumeralConversion.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Numeral Generator" Width="525"
        SizeToContent="Height"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" FontSize="26">
            <Run Text="{Binding Path=CurrentValue}"/>
            <Run Text="-"/>
            <Run Text="{Binding Path=CurrentNumeral}"/>
        </TextBlock>
        <Button Content="Generate Random Numeral"
                Click="Button_Click" FontSize="18"/>
    </StackPanel>
</Window>
